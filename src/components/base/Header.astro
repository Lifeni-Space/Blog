---
import { Icon } from 'astro-icon'
import ExternalLink from './ExternalLink.astro'
---

<header>
  <h1>
    <a href="/" data-tooltip="主页" data-direction="bottom" aria-label="主页">
      <Icon name="tabler:home" />
    </a>
  </h1>
  <nav role="list">
    <ExternalLink
      role="listitem"
      href="https://travellings.link/"
      data-tooltip="开往"
      data-direction="bottom"
      aria-label="开往"
    >
      <Icon name="tabler:train" />
    </ExternalLink>

    <a
      role="listitem"
      href="/explore"
      data-tooltip="探索"
      data-direction="bottom"
      aria-label="探索"
    >
      <Icon name="tabler:layout-grid" />
    </a>
  </nav>
</header>

<style lang="less">
  header {
    padding: 1.75rem 2.5rem 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;

    @media (max-width: 36rem) {
      padding: 1.5rem 2rem 0;
    }

    @media (max-width: 28rem) {
      padding: 1rem 1rem 0;
    }

    h1 {
      display: flex;
      align-items: center;
      font-size: 1rem;
      line-height: initial;
      font-weight: var(--font-normal);
      gap: 0.75rem;

      a {
        padding: 1rem;
        display: flex;
        align-items: center;
        color: var(--font-primary);
        border-radius: 50%;
        transition: color 0.2s;
        outline-offset: 0;

        &:hover,
        &:focus-visible {
          text-decoration: none;
          color: var(--font-link);
        }

        span {
          margin-left: 1rem;
        }

        svg {
          width: 1.25rem;
          height: 1.25rem;
        }
      }

      [data-divider] {
        height: 1.5rem;
        border-left: var(--border);
      }
    }

    nav {
      display: flex;
      align-items: center;
      gap: 0.75rem;

      & > a,
      & > button {
        position: relative;
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: inherit;
        color: var(--font-primary);
        cursor: pointer;
        transition: color 0.2s;
        border-radius: 50%;
        outline-offset: 0;

        &:hover,
        &:focus-visible {
          text-decoration: none;
          color: var(--font-link);
        }

        & > svg {
          width: 1.25rem;
          height: 1.25rem;
        }
      }
    }
  }
</style>
