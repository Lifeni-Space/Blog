---
import Tooltip from '../ui/Tooltip.astro'
export interface Props {
  name?: string
  card?: boolean
  more?: string
}

const { name, card, more } = Astro.props
---

<section w="full" max-w="2xl" flex="~ col gap-6">
  <div flex="~ row items-center justify-between" min-h="10" z="10">
    <h2 text="2xl" font="900" p="x-4">{name}</h2>
    {
      more && (
        <Tooltip content="查看更多" circle>
          <a
            aria-label={name}
            href={more}
            m="x-2"
            p="2"
            flex="~ col items-center"
            rounded="full"
            bg="group-hover:action"
            outline="~ none focus-visible:(4 yellow offset-0)"
            transition="background-color"
          >
            <div class="icon-tabler:arrow-right" w="6" h="6" />
          </a>
        </Tooltip>
      )
    }
  </div>

  {
    card ? (
      <div w="full" border="~ 1 color-line" bg="muted" rounded="md">
        <slot />
      </div>
    ) : (
      <slot />
    )
  }
</section>
