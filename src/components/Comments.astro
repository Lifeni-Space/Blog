  section {
    width: calc(100% + 3rem);
    margin: 0 -1.5rem 2.5rem -1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    &[data-remove] {
      margin: 0;
    }
  }
</style>
