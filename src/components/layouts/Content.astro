---
import Base from '@components/layouts/Base.astro'
import NavBar from '@components/layouts/NavBar.astro'

export interface Props {
  title?: string
  description?: string
  color?: string
  favicon?: string
  type?: 'paper' | 'notebook'
}

const {
  title = '记录干杯',
  description = '个人网站「记录干杯」，在这里记录一些技术相关的文章、尝试一些新的技术。',
  color = '#feec44',
  favicon = '/favicon.svg',
  type = 'paper',
} = Astro.props
---

<Base>
  <Fragment slot="head">
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href={favicon} />
    <meta name="theme-color" content={color} />
  </Fragment>

  {
    type === 'paper' && (
      <Fragment slot="body">
        <main class="w-screen h-screen flex flex-col items-center justify-center">
          <slot />
        </main>
      </Fragment>
    )
  }

  {
    type === 'notebook' && (
      <Fragment slot="body">
        <main class="relative w-screen min-h-screen flex flex-row items-start justify-start">
          <NavBar />

          <div class="relative w-full min-h-screen flex flex-row flex-1 flex-nowrap items-start justify-between bg-white dark:bg-dark-800 shadow-xl gap-8">
            <div class="w-full max-w-2xl">
              <slot name="main" />
            </div>

            <aside class="sticky top-0 w-64">
              <slot name="side" />
            </aside>
          </div>
        </main>
      </Fragment>
    )
  }
</Base>
