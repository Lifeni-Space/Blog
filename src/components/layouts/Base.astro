import '@fontsource/noto-sans-sc/700.css'
import '@fontsource/noto-sans-sc/900.css'
import '@fontsource-variable/inter'
import '@fontsource-variable/jetbrains-mono'
---

<!doctype html>
<html lang="zh-hans">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <slot name="head" />
    <link rel="manifest" href="/manifest.webmanifest" />
  </head>

  <body
    class="bg-white dark:bg-dark-900 text-light-950 dark:text-dark-50 font-medium overflow-x-hidden scroll-smooth"
  >
    <section
      class="z-[99999] fixed left-0 bottom-0 w-full p-2 bg-yellow-400 text-dark-900 flex items-center justify-center text-sm font-bold"
    >
      网站正在重新设计中，部分功能和内容还没完成。
    </section>
    <slot name="body" />
  </body>
</html>
