---
import Icon from '@components/ui/Icon.astro'
import { Image } from 'astro:assets'

export interface Props {
  src: string[]
  alt: string
  classes?: string
  cover?: boolean
  caption?: boolean
}
const { src, alt, classes, caption, cover } = Astro.props
const images = src.length > 1
---

<figure class="widget not-prose" flex="~ col gap-3">
  <Image
    class={`widget ${classes} ${images ? 'dark:hidden' : ''} ${cover ? 'aspect-3/2 md:aspect-video object-t object-cover' : ''}`}
    src={src[0]}
    {alt}
    width="1920"
    height="1080"
    loading="lazy"
    w="full"
    border={cover && 'secondary 1'}
    shadow={cover && 'lg hover:xl'}
    rounded={cover && 'md'}
    transition={cover && 'shadow'}
  />
  {
    images && (
      <Image
        class={`widget ${classes} ${images ? 'hidden dark:block' : ''} ${cover ? 'aspect-3/2 md:aspect-video object-t object-cover' : ''}`}
        src={src[1]}
        {alt}
        width="1920"
        height="1080"
        loading="lazy"
        w="full"
        border={cover && 'secondary 1'}
        shadow={cover && 'lg hover:xl'}
        rounded={cover && 'md'}
        transition={cover && 'shadow'}
      />
    )
  }

  {
    caption && (
      <figcaption
        flex="~ row gap-1.5 justify-right"
        text="xs secondary"
        font="leading-5"
        transition="colors"
      >
        <Icon
          class="my-0.25"
          name="图片说明"
          icon="i-ri:arrow-up-s-line"
          size="4"
        />
        <span>{alt}</span>
      </figcaption>
    )
  }
</figure>
