---
export interface Props {
  title?: string
  description?: string
}

import Footer from 'component:base/Footer'
import Header from 'component:base/Header'

const global = Astro.resolve('../global.less')

const desc =
  '个人网站「记录干杯」，在这里记录一些技术相关的文章、尝试一些新的技术。'

const { title, description = desc } = Astro.props as Props
---

<html lang="zh-hans">
  <head>
    <title>{title ? `${title} | 记录干杯` : '记录干杯'}</title>
    <meta name="description" content={description} />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#feec44" />
    <link rel="manifest" href="/manifest.webmanifest" />

    <link rel="stylesheet" href={global} />

    <slot name="head" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@500;800&family=Noto+Sans+SC:wght@500;800&family=JetBrains+Mono:wght@500;800&display=swap"
      rel="stylesheet"
      crossorigin
    />

    <link rel="icon" href="/favicon.svg" />
  </head>

  <body>
    <Header />
    <main><slot /></main>
    <Footer />
  </body>
</html>

<style lang="less">
  html {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow-x: hidden;
    overflow-y: scroll;
    font-size: var(--font-base);
    scroll-behavior: smooth;
    scroll-padding: 2.5rem;

    body {
      position: relative;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      font-family: var(--font-sans);
      color: var(--font-primary);
      background-color: var(--background-r);
      font-weight: var(--font-normal);
      line-height: 2;
      text-align: justify;
      text-justify: auto;
      overflow-wrap: break-word;

      main {
        width: 100%;
        max-width: var(--main-width);
        margin: 0 auto;
        padding: 1.5rem 3.5rem;
        display: flex;
        flex-direction: column;
        flex: 1;

        @media (max-width: 36rem) {
          padding: 1.5rem 3rem;
        }

        @media (max-width: 28rem) {
          padding: 1.25rem 2rem;
        }
      }
    }
  }
</style>
