---
export interface Props {
  title?: string
  description?: string
  color?: string
  favicon?: string
  // 状态
  index?: boolean
  focus?: boolean
}

import '@fontsource-variable/inter'
import '@fontsource-variable/jetbrains-mono'

import Header from './layout/Header.astro'
import Footer from './layout/Footer.astro'

const {
  title = '记录干杯',
  description = '个人网站「记录干杯」，在这里记录一些技术相关的文章、尝试一些新的技术。',
  color = '#feec44',
  favicon = '/favicon.svg',
  index = false,
  focus = false,
} = Astro.props
---

<!DOCTYPE html>
<html lang="zh-hans">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}{index && ' - 记录干杯'}</title>

    <meta name="description" content={description} />
    <meta name="theme-color" content={color} />
    <link rel="icon" href={favicon} />
    <link rel="manifest" href="/manifest.webmanifest" />

    <slot name="head" />
  </head>

  <body
    position="relative"
    w="screen"
    h="screen"
    flex="~ col items-center justify-center"
    text="main"
    font="500 sans"
    bg="main"
    overflow="hidden"
  >
    {!focus && <Header {title} {favicon} {index} />}
    <main flex="~ 1 col">
      <slot />
    </main>
    {!focus && <Footer />}
  </body>
</html>
