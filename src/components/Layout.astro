---
export interface Props {
  title?: string
  description?: string
  color?: string
  favicon?: string
  yellow?: boolean
}

import '@fontsource-variable/inter';

import Header from './layout/Header.astro'
import Footer from './layout/Footer.astro'

const {
  title = '记录干杯',
  description = '个人网站「记录干杯」，在这里记录一些技术相关的文章、尝试一些新的技术。',
  color = '#feec44',
  favicon = '/favicon.svg',
  yellow = false
} = Astro.props
---

<!DOCTYPE html>
<html lang="zh-hans">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}{yellow && ' - 记录干杯'}</title>

    <meta name="description" content={description} />
    <meta name="theme-color" content={color} />
    <link rel="icon" href={favicon} />
    <link rel="manifest" href="/manifest.webmanifest" />

    <slot name="head" />
  </head>

  <body
    flex="~ col"
    w="screen"
    h="screen"
    text="main"
    font="500 sans"
    bg="main"
    overflow="hidden"
  >
    <Header title={title} favicon={favicon} />
    <main flex="~ 1 col">
      <slot />
    </main>
    <Footer />
  </body>
</html>
