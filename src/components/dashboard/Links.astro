---
const links = [
  { name: '代码可行', href: '/dev', icon: '/dev/favicon.svg', code: 'dev' },
  {
    name: '越过长城',
    href: '/server',
    icon: '/server/favicon.svg',
    code: 'server',
  },
  { name: '时间之外', href: '/lab', icon: '/lab/favicon.svg', code: 'lab' },
  {
    name: '随意链接',
    href: 'https://iokl.link',
    icon: 'https://iokl.link/favicon.svg',
    code: 'router',
  },
]
---

<div grid="~ cols-2 gap-4" w="full">
  {
    links.map(({ name, href, icon, code }) => (
      <a
        href={href}
        target={href.startsWith('http') ? '_blank' : '_self'}
        rel={href.startsWith('http') ? 'noopener noreferrer' : ''}
        class="group"
        position="relative"
        w="full"
        h="22"
        p="x-4 y-3.5"
        flex="~ col items-start justify-between gap-1"
        border="~ 1 color-line"
        shadow="lg hover:xl"
        bg="muted"
        rounded="md"
        transition="shadow"
        outline="~ none focus-visible:(4 yellow offset-0)"
        overflow="hidden"
      >
        <h2 text="main" font="700" z="5">
          {name}
        </h2>
        <code text="subtle sm" font="mono" leading="4" z="5">
          {'->'} {code}
        </code>
        <img
          src={icon}
          alt={name}
          position="absolute"
          class="right--10 bottom--8"
          w="24"
          h="24"
          z="10"
          rounded="full"
          filter="drop-shadow-lg"
          transform="~ scale-100 group-hover:scale-110"
          transition="all"
        />
      </a>
    ))
  }
</div>
