---
import Tooltip from '../ui/Tooltip.astro'
const avatar = 'https://file.lifeni.life/avatar/friends'

// prettier-ignore
const friends = [
  { name: 'Nanako', link: 'https://tanakarino.cn/', avatar: `${avatar}/Nanako.webp` },
  { name: 'bluebonnet27', link: 'https://bluebonnet27.github.io/', avatar: `${avatar}/bluebonnet27.webp` },
  { name: 'GluttonK', link: 'https://blog.csdn.net/GluttonK/', avatar: `${avatar}/GluttonK.webp` },
  { name: 'Wumbuk', link: 'https://blog.csdn.net/qq_48081868/', avatar: `${avatar}/Wumbuk.webp` },
  { name: 'YueChen', link: 'https://www.yuechen.xyz/', avatar: `${avatar}/YueChen.webp` },
  { name: 'ss967', link: 'https://ssblog.top/', avatar: `${avatar}/ss967.webp` },
  { name: 'Bakapiano', link: 'https://bakapiano.github.io/', avatar: `${avatar}/Bakapiano.webp` },
]
---

<div w="full" flex="~ row gap-4 sm:gap-5 wrap" p="x-1 sm:x-0">
  {
    friends.map(({ name, link, avatar }) => (
      <a href={link} target="_blank" rel="noopener noreferrer">
        <img
          src={avatar}
          alt={name}
          title={name}
          z="1 hover:10"
          w="14 sm:16"
          h="14 sm:16"
          rounded="full"
          shadow="lg hover:xl"
          transform="~ scale-100 translate-y-0 hover:(scale-125 translate-y--2)"
          transition="all"
        />
      </a>
    ))
  }
</div>
