---
import { Markdown } from 'astro/components'
import ExternalLink from 'component:base/ExternalLink'

const items = 'https://directus-api.dist.run/items'
const assets = 'https://directus-api.dist.run/assets'

const friends = (await fetch(`${items}/friends`).then(r => r.json())) as Friends
const hero = (await fetch(`${items}/hero`).then(r => r.json())) as Hero
---

<article>
  <Markdown>
    <Markdown content={hero.data.markdown} />
  </Markdown>
  <section>
    {friends.data.map(friend => (
      <ExternalLink href={friend.link} data-name={friend.name}>
        <img
          aria-label={friend.name}
          src={`${assets}/${friend.avatar}`}
          alt={friend.name}
        />
      </ExternalLink>
    ))}
  </section>
</article>

<style lang="less" global>
  article {
    margin: 1rem 0 3rem 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    font-family: var(--font-sans);
    line-height: 1.875;

    h1 {
      font-weight: var(--font-bold);
      text-justify: none;
      text-align: left;
      margin: 0 0 4.5rem 0;
      font-size: 1.875rem;
      line-height: 1.75;

      &::before {
        content: 'üëãüèª';
        margin-right: 1rem;
        margin-left: -0.25rem;
        font-weight: var(--font-normal);
      }
    }

    p {
      margin: 0.5rem 0;
    }

    strong {
      font-weight: var(--font-bold);
    }

    section {
      width: 100%;
      margin: 0 -1px;
      padding: 1rem 0;
      display: flex;
      gap: 1rem;

      a {
        position: relative;
        display: flex;
        border-radius: 50%;

        img {
          width: 2.5rem;
          height: 2.5rem;
          border: var(--border);
          border-radius: 50%;
          box-shadow: var(--shadow-lite);
          transition: all 0.2s;
        }

        &::before {
          content: attr(data-name);
          position: absolute;
          top: -3.75rem;
          left: 50%;
          padding: 0.125em 0.75em;
          font-size: 0.925rem;
          color: var(--light);
          background-color: var(--dark);
          border-radius: var(--border-radius);
          border: var(--border);
          box-shadow: var(--shadow);
          transform: translateX(-50%) translateY(0.25rem) scale(0.9);
          transform-origin: bottom;
          white-space: nowrap;
          opacity: 0;
          visibility: hidden;
          transition: all 0.2s;
        }

        &:hover,
        &:focus-visible {
          text-decoration: none;
          outline: none;

          &::before {
            opacity: 1;
            visibility: visible;
            transform: translateX(-50%) translateY(0) scale(1);
          }

          img {
            box-shadow: var(--shadow);
            transform: scale(1.5);
            transform-origin: bottom;
          }
        }
      }
    }
  }
</style>
