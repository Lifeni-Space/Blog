---
import Layout from '../components/Layout.astro'
import Section from '../components/base/Section.astro'
import Articles from '../components/dashboard/Articles.astro'
import Links from '../components/dashboard/Links.astro'
import Stories from '../components/dashboard/Stories.astro'

export const prerender = true
---

<Layout>
  <div w="full" flex="~ 1 col items-center justify-start gap-6" p="4">
    <Section name="文章" more="/article">
      <Articles count={4} />
    </Section>
    <Section name="专题" more="/story">
      <Stories count={4} />
    </Section>
    <Section name="朋友">
      <Links />
    </Section>
  </div>
</Layout>
