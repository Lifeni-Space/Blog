---
import Layout from '../components/Layout.astro'
import Section from '../components/base/Section.astro'
import Articles from '../components/dashboard/Articles.astro'
import Links from '../components/dashboard/Links.astro'
import Stories from '../components/dashboard/Stories.astro'
import Archives from '../components/dashboard/archives/Archives.astro'

export const prerender = true
---

<Layout>
  <div
    w="full"
    flex="~ 1 col items-center justify-start gap-6 sm:gap-8"
    p="x-4 y-2"
  >
    <Section name="文章">
      <Articles />
    </Section>
    <Section name="专题">
      <Stories />
    </Section>
    <Section name="朋友">
      <Links />
    </Section>
    <Section name="存档">
      <Archives />
    </Section>
  </div>
</Layout>
