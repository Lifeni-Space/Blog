---
import Layout from '../components/Layout.astro'
import Posts from '../components/home/Posts.astro'
import Friends from '../components/home/Friends.astro'
import Intro from '../components/base/Intro.astro'

const items = 'https://dev.lifeni.life/items'
const hero = (await fetch(`${items}/hero`).then(r => r.json())) as About
---

<Layout>
  <Intro>
    <Fragment set:html={hero.data.content} />
    <Friends />
  </Intro>

  <Posts />
</Layout>
