---
import Layout from '../components/Layout.astro'
import Search from '../components/home/Search.astro'
import Posts from '../components/home/Posts.astro'
import Friends from '../components/home/Friends.astro'
import About from '../components/base/About.astro'

const items = 'https://dev.lifeni.life/items'
const about = (await fetch(`${items}/about`).then(r => r.json())) as About
---

<Layout>
  <About>
    <Fragment set:html={about.data.content} />
    <Friends />
  </About>
  <Search />
  <Posts />
</Layout>
